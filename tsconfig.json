{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"isolatedModules": false,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"@components": ["src/lib/components"],
			"@components/*": ["src/lib/components/*"],
			"@scripts": ["src/lib/scripts"],
			"@scripts/*": ["src/lib/scripts/*"]
		}
	}
}
